{
  "name": "webchat-loader",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "build": "npm run build:babel && npm run build:esbuild && npm run build:public",
    "build:babel": "babel src --out-dir lib",
    "build:esbuild": "esbuild landing=lib/landing/index.js webchat=lib/webchat/index.js --bundle --define:BUILD_DATE=\\\"`date +\"%Y-%m-%d\"`\\\" --define:BUILD_TIME=\\\"`date +\"%H:%m:%S\"`\\\" --define:process.env.npm_package_version=\\\"$npm_package_version\\\" --outdir=build --sourcemap=external --target=chrome100,edge100,firefox100,ie11,safari15",
    "build:public": "cpy public/**/* build/",
    "bump": "npm install --legacy-peer-deps $(cat package.json | jq -r '(.dependencies | keys) + (.devDependencies | keys) - ((.skipBump // {}) | keys) | .[]' | awk '{print $1 \"@latest\"}')",
    "prepublishOnly": "npm run build",
    "start": "concurrently --names=\"babel,esbuild\" \"npm run start:babel\" \"npm run start:esbuild\"",
    "start:babel": "npm run build:babel -- --watch",
    "start:esbuild": "esbuild landing=lib/landing/index.js webchat=lib/webchat/index.js --bundle --define:BUILD_DATE=\\\"`date +\"%Y-%m-%d\"`\\\" --define:BUILD_TIME=\\\"`date +\"%H:%m:%S\"`\\\" --define:process.env.npm_package_version=\\\"$npm_package_version\\\" --outdir=public --servedir=public --sourcemap=external --target=chrome100,edge100,firefox100,ie11,safari15",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/compulim/webchat-loader.git"
  },
  "author": "William Wong <compulim@hotmail.com> (http://compulim.info/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/compulim/webchat-loader/issues"
  },
  "homepage": "https://github.com/compulim/webchat-loader#readme",
  "skipBump": {
    "emotion": "@emotion/css@11 depends on stylis which does not support IE11",
    "botframework-directlinejs": "botframwork-directlinejs@0.15.1 depends on buffer@6.0.3 which is not transformable by ESBuild to IE11",
    "esbuild": "esbuild@0.14 does not transpile const for IE11",
    "react": "react@18 dropped support of IE11",
    "react-dom": "react-dom@18 dropped support of IE11",
    "react-redux": "react-redux@8 is using syntax not transpilable by ESBuild to IE11"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.5",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/runtime-corejs3": "^7.20.6",
    "@types/react": "^18.0.26",
    "@types/react-redux": "^7.1.24",
    "concurrently": "^7.6.0",
    "cpy-cli": "^4.2.0",
    "esbuild": "^0.14.39",
    "jest": "^29.3.1"
  },
  "dependencies": {
    "botframework-directlinejs": "^0.11.6",
    "classnames": "^2.3.2",
    "core-js": "^3.26.1",
    "emotion": "^10.0.27",
    "jwt-decode": "^3.1.2",
    "math-random": "^2.0.1",
    "ms": "^2.1.3",
    "on-error-resume-next": "^1.1.0",
    "prop-types": "^15.8.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-redux": "^7.2.0",
    "redux": "^4.2.0",
    "redux-saga": "^1.2.2",
    "simple-update-in": "^2.2.0",
    "whatwg-fetch": "^3.6.2"
  }
}

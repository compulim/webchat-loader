{
  "name": "webchat-loader",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "build": "npm run build:babel && npm run build:esbuild && npm run build:public",
    "build:babel": "babel src --out-dir lib",
    "build:esbuild": "esbuild landing=lib/landing/index.js webchat=lib/webchat/index.js --bundle --minify --outdir=build --sourcemap=external --target=chrome100,edge100,firefox100,ie11,safari15",
    "build:public": "cpy public/**/* build/",
    "prepublishOnly": "npm run build",
    "start": "concurrently --names=\"babel,esbuild\" \"npm run start:babel\" \"npm run start:esbuild\"",
    "start:babel": "npm run build:babel -- --watch",
    "start:esbuild": "esbuild landing=lib/landing/index.js webchat=lib/webchat/index.js --bundle --outdir=public --servedir=public --sourcemap=external --target=chrome100,edge100,firefox100,ie11,safari15"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/compulim/webchat-loader.git"
  },
  "author": "William Wong <compulim@hotmail.com> (http://compulim.info/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/compulim/webchat-loader/issues"
  },
  "homepage": "https://github.com/compulim/webchat-loader#readme",
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/plugin-transform-runtime": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "@babel/runtime-corejs3": "^7.18.9",
    "concurrently": "^5.3.0",
    "cpy-cli": "^4.1.0",
    "esbuild": "^0.14.39"
  },
  "dependencies": {
    "botframework-directlinejs": "^0.11.6",
    "classnames": "^2.2.6",
    "core-js": "^3.24.1",
    "emotion": "^10.0.27",
    "jwt-decode": "^3.1.2",
    "math-random": "^1.0.4",
    "ms": "^2.1.2",
    "on-error-resume-next": "^1.1.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "simple-update-in": "^2.1.1",
    "whatwg-fetch": "^3.6.2"
  }
}
